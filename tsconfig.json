{
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es5",
      "lib": [ "es2015", "dom" ],
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "suppressImplicitAnyIndexErrors": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "declaration": true,
      "jsx": "react",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"],
    
    "compileOnSave": false,
    "buildOnSave": false
  }