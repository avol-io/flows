{
  "name": "flows",
  "version": "1.0.0-beta1",
  "description": "Flows is a library that helps process-oriented communication between pages/components of a Single Page Application or Micro Front-end. ",
  "main": "dist/index.js",
  "typings": "dist/index",
  "scripts": {
    "build": "tsc",
    "test": "jest ",
    "test:badges": "yarn run test  && jest-coverage-badges",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": ["micro front-end","flow","process","front-end"],
  "author": {
    "name" : "Alessandro Avolio",
    "email" : "social@avol.io",
    "url" : "http://www.avol.io/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/avol-io/flows.git"
  },
  "license": "GPLV3",
  "homepage": "https://github.com/avol-io/flows",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-coverage-badges": "^1.1.2",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "dependencies": {}
}
